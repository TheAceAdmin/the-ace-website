# Serve pages without /pages/ in URL (200 = rewrite, URL stays the same)
/maintenance-calculator.html    /pages/maintenance-calculator.html    200
/property-tax-lookup.html    /pages/property-tax-lookup.html    200
/membership-form.html    /pages/membership-form.html    200
/tenant-form.html    /pages/tenant-form.html    200
/business-opportunities.html    /pages/business-opportunities.html    200
/stall-terms-and-conditions.html    /pages/stall-terms-and-conditions.html    200

# Allow direct access to /pages/* URLs (optional, for backward compatibility)
/pages/*    /pages/:splat    200

# Static assets - serve directly
/assets/*    /assets/:splat    200
/styles/*    /styles/:splat    200
/scripts/*   /scripts/:splat   200

# Root path
/    /index.html    200

# Explicitly handle index.html to avoid loop
/index.html    /index.html    200

# Catch-all: serve index.html for unknown routes (but not for existing files)
# Note: This will only trigger for paths that don't match existing files

